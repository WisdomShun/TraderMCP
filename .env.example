# Interactive Brokers Gateway Configuration
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for paper trading, 7496 for live trading
IB_CLIENT_ID=1
IB_ACCOUNT=DU123456  # Your IB account number

# Risk Management Parameters
# Single position limit: max % of total equity per symbol
RISK_MAX_SINGLE_POSITION_PCT=20

# Total position limit: max % of net liquidation value
RISK_MAX_TOTAL_POSITION_PCT=85

# Maximum drawdown: force close if single position loses this %
RISK_MAX_DRAWDOWN_PCT=10

# Option position limit: max % of total equity in options
RISK_MAX_OPTION_POSITION_PCT=10

# Margin trading: set to false to prohibit margin trading
RISK_ALLOW_MARGIN=false

# Stop loss requirement: force all orders to have stop loss
RISK_REQUIRE_STOP_LOSS=true

# Concentration risk: warn if single sector exceeds this %
RISK_SECTOR_CONCENTRATION_WARNING=30

# Volatility threshold: warn for symbols with IV > this value
RISK_HIGH_VOLATILITY_THRESHOLD=50

# Liquidity threshold: warn if average volume < this
RISK_MIN_LIQUIDITY_VOLUME=100000

# Cash collateral calculation for naked puts
# Cash counts as 100%, short-term bonds (SGOV, etc.) count as 95%
RISK_BOND_COLLATERAL_MULTIPLIER=0.95

# Database Configuration
CACHE_DB_PATH=./data/trading.db

# K-line data cache duration in days
CACHE_KLINE_DAYS=365

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=./logs/
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Timezone
TIMEZONE=America/New_York
