# =============================================================================
# Interactive Brokers Gateway Configuration
# =============================================================================

# IB Live Credentials
TWS_USERID=your_ib_username
TWS_PASSWORD=your_ib_password

# IB Paper Credentials
TWS_USERID_PAPER=your_ib_paper_username
TWS_PASSWORD_PAPER=your_ib_paper_password

# Trading Mode: paper or live
TRADING_MODE=paper
IB_API_PORT_LIVE=4003
IB_API_PORT_PAPER=4004

# API Access Settings
READ_ONLY_API=yes

# VNC port for remote desktop access
IB_VNC_PORT=5900
VNC_SERVER_PASSWORD=12345678

# Gateway Settings
TWS_SETTINGS_PATH=
TWS_ACCEPT_INCOMING=accept

# Two-Factor Authentication
TWOFA_TIMEOUT_ACTION=restart
TWOFA_DEVICE=
TWOFA_EXIT_INTERVAL=60
RELOGIN_AFTER_TWOFA_TIMEOUT=yes

# Session Management
BYPASS_WARNING=
AUTO_RESTART_TIME=11:59 PM
AUTO_LOGOFF_TIME=
TWS_COLD_RESTART=
SAVE_TWS_SETTINGS=
EXISTING_SESSION_DETECTED_ACTION=primary

# Trading Options
ALLOW_BLIND_TRADING=no

# Master Client ID (optional)
TWS_MASTER_CLIENT_ID=

# Timezone
TIME_ZONE=Asia/Shanghai
TZ=Asia/Shanghai

# Advanced Configuration
CUSTOM_CONFIG=NO
JAVA_HEAP_SIZE=

# SSH Tunnel (optional)
SSH_TUNNEL=
SSH_OPTIONS=
SSH_ALIVE_INTERVAL=
SSH_ALIVE_COUNT=
SSH_PASSPHRASE=
SSH_REMOTE_PORT=
SSH_USER_TUNNEL=
SSH_RESTART=
SSH_VNC_PORT=

# Custom Scripts (optional)
START_SCRIPTS=
X_SCRIPTS=
IBC_SCRIPTS=

# =============================================================================
# TraderMCP Server Configuration
# =============================================================================

# IB Connection Settings (connect to ib-gateway container)
IB_CLIENT_ID=1
# Your IB account number or "All" for all accounts
IB_ACCOUNT=All

# MCP Server Settings
MCP_ADDRESS=0.0.0.0
MCP_PORT=4211
MCP_PATH=/ibkr

# Cache Configuration
CACHE_DB_PATH=/app/data/trading.db
# K-line data cache duration in days
CACHE_KLINE_DAYS=365

# Logging Configuration
LOG_LEVEL=INFO
